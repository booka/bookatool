<h1>Listing clips</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Body</th>
    <th>Media file name</th>
    <th>Media content type</th>
    <th>Media file size</th>
    <th>Media updated at</th>
  </tr>

<% @clips.each do |clip| %>
  <tr>
    <td><%=h clip.title %></td>
    <td><%=h clip.description %></td>
    <td><%=h clip.body %></td>
    <td><%=h clip.media_file_name %></td>
    <td><%=h clip.media_content_type %></td>
    <td><%=h clip.media_file_size %></td>
    <td><%=h clip.media_updated_at %></td>
    <td><%= link_to 'Show', clip %></td>
    <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
    <td><%= link_to 'Destroy', clip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New clip', new_clip_path %>